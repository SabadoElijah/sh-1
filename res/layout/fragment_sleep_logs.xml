<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/sleeplogbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/sleeplogsbg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Sleep Logs"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Detailed record of sleep onset"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp" />



        <TextView
            android:id="@+id/sleepDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dataround"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Close"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            />
    </LinearLayout>
</ScrollView>
